    <a href="/session/home"><img src="/images/home.png" alt="Home"></a>
    <a href="/session/search"><img src="/images/search.png" alt="Search"></a>
    <a href="/session/profile"><img src="{{user.profilePicture}}" alt="Profile"></a>
  </div>
