<div class="parent-div">

    <div class="profile">

        <div class="profile-overview">
            <div id="pr-img" onclick="changeProfilePicture()">
                <img src="{{user.profilePicture}}" alt="">
            </div>
            {{!-- UPLOAD PIC --}}
            <div class="uploadProfilePic" style="display: none">
                <h2>Upload your photo</h2>
                <form action="/upload" method="post" enctype="multipart/form-data">
                    <input type="text" name="name">
                    <input type="file" name="photo">
                    <input type="submit" value="Save">
                </form>
            </div>
            {{!-- END  --}}
            <p>{{user.firstName}}</p>
        </div>

        <div class="tags-interests">
            <p class="tag-title fancy"><span>My interests</span></p>
            <div class="in-wrapper">
                {{#each user.interests}}
                <span class="tag-interest">
                    <a href="/session/profile/deleteInterest/{{this}}">{{this}}</a>
                </span>
                {{/each}}
            </div>
        </div>

        <div class="add-interest">
            <p class="tag-title fancy"><span>Add interest</span></p>
            <form action="/session/profile" method="post" id="input-new-interests">
                <label for=" interest"></label>
                <img src="/images/plus.png" alt="">
                <input type="text" name="interest">
            </form>
        </div>

        <a class="log-btn" href="/auth/logout">Logout</a>
        <button onclick="deleteAccount()" style="color: red">{{!--<a class="delete-btn" href="#">  --}}Delete account
            {{!--</a>  --}}</button>

        <div id="delete-prompt" style="display: none">
            <h3>Are you sure you want to delete your account {{user.firstname}} ?</h3>
            <p>Sad to see you go :(</p>
            <button><a href="/auth/logout">Yes</a></button>
            <button><a href="/session/profile">No</a></button>
        </div>

    </div>

</div>

<style>
    #delete-prompt {
        position: absolute;
        text-align: center;
        width: 100%;
        height: 100%;
        background-color: #fff;
        border-radius: 10px;
    }

    #pr-img:hover {
        cursor: pointer;
    }
</style>
<script>
    const deleteAccount = () => {
        document.querySelector("#delete-prompt").style.display = 'block';
    }
